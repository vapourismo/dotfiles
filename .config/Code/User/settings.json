// Place your settings in this file to overwrite the default settings
{
    "editor.cursorStyle": "line",
    "editor.fontFamily": "Iosevka",
    "editor.fontSize": 13,
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": false,
    "editor.renderLineHighlight": "gutter",
    "editor.renderWhitespace": "all",
    "editor.rulers": [100],
    "editor.selectionHighlight": true,
    "editor.snippetSuggestions": "inline",
    "editor.wordWrapColumn": 100,
    "explorer.openEditors.visible": 0,
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "go.buildOnSave": "workspace",
    "go.vetOnSave": "workspace",
    "go.lintOnSave": "workspace",
    "go.enableCodeLens": {"references": false, "runtest": false},
    "go.formatOnSave": true,
    "go.formatTool": "goimports",
    "go.gopath": "/data/go",
    "go.lintTool": "golint",
    "go.liveErrors": {"enabled": false, "delay": 500},
    "go.testFlags": ["-race"],
    "guides.active.enabled": false,
    "guides.overrideDefault": true,
    "guides.sendUsagesAndStats": false,
    "guides.stack.enabled": false,
    "window.menuBarVisibility": "toggle",
    "window.openFilesInNewWindow": "off",
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Vapourismo - Color Scheme",
    "workbench.sideBar.location": "left",
    "workbench.welcome.enabled": false,
    "editor.renderIndentGuides": false,
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#333",
        "editorBracketMatch.background": "#6699CC",
        "editorBracketMatch.border": "#0000",
        "editorLineNumber.foreground": "#71CDFF",
        "editorSuggestWidget.background": "#2A2A2A",
        "editorSuggestWidget.border": "#0000",
        "editorSuggestWidget.selectedBackground": "#4084D6",
        "list.highlightForeground": "#FFF",
        "statusBar.background": "#4084D6",
        "editorWhitespace.foreground": "#1a1a1a"
    },
    "markdown.preview.scrollPreviewWithEditorSelection": false,
    "markdown.preview.scrollEditorWithPreview": false,
    "guides.stack.hideOnSelection": false,
    "editor.useTabStops": true
}
